<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fx:id="layoutContainer" fitToWidth="true" hbarPolicy="ALWAYS" minHeight="500.0" minWidth="300.0" prefHeight="800.0" prefWidth="1100.0" style="-fx-background-color: #141313;" vbarPolicy="ALWAYS" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.presentation.controller.AppController">
   <content>
      <VBox prefHeight="1800.0" prefWidth="1100.0" style="-fx-background-color: #141313;">
         <children>
            <HBox fx:id="landingPageContainer" alignment="CENTER" style="-fx-background-color: #141313;">
<!--               <children>-->
<!--                  <StackPane fx:id="landingPosterStackPane" />-->
<!--               </children>-->
<!--               <VBox.margin>-->
<!--                  <Insets bottom="10.0" top="5.0" />-->
<!--               </VBox.margin>-->
            </HBox>
            <HBox fx:id="averageMoviesRecomandation" prefHeight="25.0" prefWidth="1086.0">
               <children>
                  <Label text="Recomended movies" textFill="#d3fbd8">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox fx:id="topRecomendedMovies" alignment="CENTER" style="-fx-background-color: #141313;">
               <children>
                  <StackPane fx:id="topMoviesFromSimilarUsers" onMouseEntered="#showRecommendedButtons" onMouseExited="#hideRecommendedButtons" style="-fx-background-color: #141313;" styleClass="stackPaneParent">
                     <children>
                        <ScrollPane fx:id="scrollPaneRecomendedMovies" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #141313;" styleClass="scrollPaneParent" vbarPolicy="NEVER" StackPane.alignment="CENTER">
                           <content>
                              <HBox fx:id="recommendedMoviesPostersParent" alignment="CENTER" style="-fx-background-color: #141313;" styleClass="postersParent" stylesheets="@../components/poster/Poster.css" />
                           </content>
                        </ScrollPane>
                        <MFXButton fx:id="rightButtonRecomended" alignment="CENTER" buttonType="RAISED" contentDisplay="CENTER" depthLevel="LEVEL3" onAction="#toTheRightRecomended" opacity="0.49" rippleColor="#ec0000" style="-fx-background-color: #141313;" text="&gt;" textFill="WHITE" visible="false" StackPane.alignment="CENTER_RIGHT">
                           <font>
                              <Font name="Arial Bold" size="24.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </MFXButton>
                        <MFXButton fx:id="leftButtonRecomended" buttonType="RAISED" contentDisplay="CENTER" onAction="#toTheLeftRecomended" opacity="0.49" rippleColor="#ec0000" style="-fx-background-color: #141313;" text="&lt;" textFill="WHITE" visible="false" StackPane.alignment="CENTER_LEFT">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <font>
                              <Font name="Arial Bold" size="24.0" />
                           </font>
                        </MFXButton>
                     </children>
                  </StackPane>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox fx:id="categoryTitle" prefHeight="25.0" prefWidth="1086.0">
               <children>
                  <Label text="Unseen movies" textFill="#d3fbd8">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox fx:id="posterRootParent" alignment="CENTER" spacing="10.0" style="-fx-background-color: #141313;" styleClass="groupParent" stylesheets="@Main.css">
               <children>
                  <StackPane onMouseEntered="#showButtons" onMouseExited="#hideButtons" style="-fx-background-color: #141313;" styleClass="stackPaneParent" HBox.hgrow="ALWAYS">
                     <children>
                        <ScrollPane fx:id="scrollPaneFirstPoster" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #141313;" styleClass="scrollPaneParent" vbarPolicy="NEVER" StackPane.alignment="CENTER">
                           <content>
                              <HBox fx:id="postersParent" alignment="CENTER" style="-fx-background-color: #141313;" styleClass="postersParent" stylesheets="@../components/poster/Poster.css" />
                           </content>
                        </ScrollPane>
                        <MFXButton fx:id="rightButton" alignment="CENTER" buttonType="RAISED" contentDisplay="CENTER" depthLevel="LEVEL3" onAction="#toTheRight" opacity="0.49" rippleColor="#ec0000" style="-fx-background-color: #141313;" text="&gt;" textFill="WHITE" visible="false" StackPane.alignment="CENTER_RIGHT">
                           <font>
                              <Font name="Arial Bold" size="24.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </MFXButton>
                        <MFXButton fx:id="leftButton" buttonType="RAISED" contentDisplay="CENTER" onAction="#toTheLeft" opacity="0.49" rippleColor="#ec0000" style="-fx-background-color: #141313;" text="&lt;" textFill="WHITE" visible="false" StackPane.alignment="CENTER_LEFT">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <font>
                              <Font name="Arial Bold" size="24.0" />
                           </font>
                        </MFXButton>
                     </children>
                  </StackPane>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox fx:id="seenMovies" prefHeight="26.0" prefWidth="1086.0">
               <children>
                  <Label layoutX="10.0" layoutY="10.0" text="Seen movies" textFill="#d3fbd8">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox fx:id="topMoviesSeen">
               <children>
                  <StackPane onMouseEntered="#showSeenButton" onMouseExited="#hideSeenButton" style="-fx-background-color: #141313;" HBox.hgrow="ALWAYS">
                     <children>
                        <ScrollPane fx:id="scrollPaneMoviesSeen" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #141313;" vbarPolicy="NEVER">
                           <content>
                              <HBox fx:id="postersParentMoviesSeen" alignment="CENTER" style="-fx-background-color: #141313;" />
                           </content>
                        </ScrollPane>
                        <MFXButton fx:id="leftButtonNSeen" buttonType="RAISED" contentDisplay="CENTER" depthLevel="LEVEL3" onAction="#toTheLeftNSeen" opacity="0.49" rippleColor="#ec0000" style="-fx-background-color: #141313;" text="&lt;" textFill="WHITE" visible="false" StackPane.alignment="CENTER_LEFT">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <font>
                              <Font name="Arial Bold" size="24.0" />
                           </font>
                        </MFXButton>
                        <MFXButton fx:id="rightButtonNSeen" alignment="CENTER" buttonType="RAISED" contentDisplay="CENTER" depthLevel="LEVEL3" onAction="#toTheRightNSeen" opacity="0.49" rippleColor="#ec0000" style="-fx-background-color: #141313;" text="&gt;" textFill="WHITE" visible="false" StackPane.alignment="CENTER_RIGHT">
                           <font>
                              <Font name="Arial Bold" size="24.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </MFXButton>
                     </children>
                  </StackPane>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
